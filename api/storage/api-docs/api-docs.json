                "tags": [
                    "Expenses"
                ],
                "summary": "Exclui uma despesa",
                "description": "Exclui uma despesa com base no ID fornecido",
                "operationId": "deleteExpense",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID da despesa",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sucesso",
