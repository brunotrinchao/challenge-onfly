    "components": {
        "schemas": {
            "ExpenseStoreRequest": {
                "title": "Expense Store Request",
                "required": [
                    "description",
                    "date",
                    "amount"
                ],
                "properties": {
                    "description": {
                        "type": "string",
                        "maxLength": 191,
                        "example": "Expense description"
                    },
                    "date": {
                        "type": "string",
                        "format": "date",
                        "example": "2024-01-19"
                    },
                    "amount": {
                        "type": "number",
                        "minimum": 0,
                        "example": 9.99
                    }
                },
                "type": "object"
            },
            "ExpenseUpdateRequest": {
                "title": "Expense Update Request",
                "required": [
                    "description",
                    "date",
                    "amount"
                ],
                "properties": {
                    "description": {
                        "type": "string",
                        "maxLength": 191,
                        "example": "Expense description"
                    },
                    "date": {
                        "type": "string",
                        "format": "date",
                        "example": "2024-01-19"
                    },
                    "amount": {
                        "type": "number",
                        "minimum": 0,
                        "example": 9.99
                    }
                },
                "type": "object"
            },
            "ExpenseResource": {
                "title": "Expense Resource",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": "1"
                    },
                    "description": {
                        "type": "string",
                        "example": "Expense description"
                    },
                    "date": {
                        "type": "string",
                        "format": "date",
                        "example": "2022-01-01"
                    },
                    "amount": {
                        "type": "number",
                        "format": "float",
                        "example": "10.99"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2022-01-01T12:00:00Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2022-01-01T12:00:00Z"
                    }
                },
                "type": "object"
            }
        }
